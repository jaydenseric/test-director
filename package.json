{
  "name": "test-director",
  "version": "4.0.0",
  "description": "An ultra lightweight unit test director for Node.js.",
  "license": "MIT",
  "author": {
    "name": "Jayden Seric",
    "email": "me@jaydenseric.com",
    "url": "https://jaydenseric.com"
  },
  "repository": "github:jaydenseric/test-director",
  "homepage": "https://github.com/jaydenseric/test-director#readme",
  "bugs": "https://github.com/jaydenseric/test-director/issues",
  "funding": "https://github.com/sponsors/jaydenseric",
  "keywords": [
    "test",
    "director",
    "esm",
    "mjs"
  ],
  "files": [
    "lib"
  ],
  "sideEffects": false,
  "module": "lib/index.mjs",
  "main": "lib",
  "exports": {
    ".": {
      "import": "./lib/index.mjs",
      "require": "./lib/index.js"
    },
    "./lib": {
      "import": "./lib/index.mjs",
      "require": "./lib/index.js"
    },
    "./lib/": "./lib/",
    "./package": "./package.json",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "10 - 12 || >= 13.7"
  },
  "dependencies": {
    "kleur": "^3.0.3",
    "stack-utils": "^2.0.2"
  },
  "devDependencies": {
    "coverage-node": "^2.0.3",
    "eslint": "^6.8.0",
    "eslint-config-env": "^13.0.6",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsdoc": "^24.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "hard-rejection": "^2.1.0",
    "jsdoc-md": "^6.0.0",
    "prettier": "^2.0.5",
    "snapshot-assertion": "^1.0.0"
  },
  "scripts": {
    "prepare": "npm run prepare:jsdoc && npm run prepare:prettier",
    "prepare:jsdoc": "jsdoc-md",
    "prepare:prettier": "prettier --write readme.md",
    "test": "npm run test:eslint && npm run test:prettier && npm run test:api",
    "test:eslint": "eslint .",
    "test:prettier": "prettier -c .",
    "test:api": "coverage-node -r hard-rejection/register test",
    "prepublishOnly": "npm test"
  }
}
