{
  "name": "test-director",
  "version": "7.0.0",
  "description": "An ultra lightweight unit test director for Node.js.",
  "license": "MIT",
  "author": {
    "name": "Jayden Seric",
    "email": "me@jaydenseric.com",
    "url": "https://jaydenseric.com"
  },
  "repository": "github:jaydenseric/test-director",
  "homepage": "https://github.com/jaydenseric/test-director#readme",
  "bugs": "https://github.com/jaydenseric/test-director/issues",
  "funding": "https://github.com/sponsors/jaydenseric",
  "keywords": [
    "test",
    "director",
    "esm",
    "mjs"
  ],
  "files": [
    "TestDirector.mjs"
  ],
  "sideEffects": false,
  "main": "./TestDirector.mjs",
  "exports": {
    ".": "./TestDirector.mjs",
    "./package.json": "./package.json",
    "./TestDirector.mjs": "./TestDirector.mjs"
  },
  "engines": {
    "node": "^12.22.0 || ^14.17.0 || >= 16.0.0"
  },
  "dependencies": {
    "kleur": "^4.1.4",
    "stack-utils": "^2.0.5"
  },
  "devDependencies": {
    "coverage-node": "^5.0.1",
    "eslint": "^8.5.0",
    "eslint-config-env": "^23.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsdoc": "^37.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jsdoc-md": "^11.0.2",
    "prettier": "^2.5.1",
    "snapshot-assertion": "^4.0.0"
  },
  "scripts": {
    "docs-update": "jsdoc-md",
    "docs-check": "jsdoc-md -c",
    "eslint": "eslint .",
    "prettier": "prettier -c .",
    "tests": "coverage-node test/index.mjs",
    "test": "npm run eslint && npm run prettier && npm run docs-check && npm run tests",
    "prepublishOnly": "npm test"
  }
}
